<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dealsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/dealsNoResultsLayout"
        layout="@layout/deal_no_results_layout"
        android:visibility="gone" />

    <include
        android:id="@+id/dealsErrorLayout"
        layout="@layout/deal_error_layout"
        android:visibility="gone" />

    <include
        android:id="@+id/dealsProgressLayout"
        layout="@layout/deals_progress_layout"
        android:visibility="gone" />

</android.support.constraint.ConstraintLayout>